{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "CommonJS", // For tsconfig.cjs.json
    "target": "ES2015",
    "outDir": "./dist/cjs",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
