{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "ESNext", // For ES modules
    "target": "es5",
    "outDir": "./dist/esm",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
